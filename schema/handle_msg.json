{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "HandleMsg",
  "anyOf": [
    {
      "description": "Register Contracts contract address",
      "type": "object",
      "required": [
        "register_contracts"
      ],
      "properties": {
        "register_contracts": {
          "type": "object",
          "required": [
            "collector_contract",
            "distributor_contract"
          ],
          "properties": {
            "collector_contract": {
              "description": "overseer_contract: HumanAddr, The contract has the logics for GLOW distribution speed distribution_model: HumanAddr, Collector contract to send the reserve fees",
              "allOf": [
                {
                  "$ref": "#/definitions/HumanAddr"
                }
              ]
            },
            "distributor_contract": {
              "description": "Faucet contract to drip GLOW token to users",
              "allOf": [
                {
                  "$ref": "#/definitions/HumanAddr"
                }
              ]
            }
          }
        }
      }
    },
    {
      "description": "Update contract configuration",
      "type": "object",
      "required": [
        "update_config"
      ],
      "properties": {
        "update_config": {
          "type": "object",
          "properties": {
            "block_time": {
              "type": [
                "integer",
                "null"
              ],
              "format": "uint64",
              "minimum": 0.0
            },
            "lottery_interval": {
              "type": [
                "integer",
                "null"
              ],
              "format": "uint64",
              "minimum": 0.0
            },
            "owner": {
              "anyOf": [
                {
                  "$ref": "#/definitions/HumanAddr"
                },
                {
                  "type": "null"
                }
              ]
            },
            "prize_distribution": {
              "type": [
                "array",
                "null"
              ],
              "items": {
                "$ref": "#/definitions/Decimal256"
              }
            },
            "reserve_factor": {
              "anyOf": [
                {
                  "$ref": "#/definitions/Decimal256"
                },
                {
                  "type": "null"
                }
              ]
            },
            "split_factor": {
              "anyOf": [
                {
                  "$ref": "#/definitions/Decimal256"
                },
                {
                  "type": "null"
                }
              ]
            },
            "ticket_prize": {
              "anyOf": [
                {
                  "$ref": "#/definitions/Decimal256"
                },
                {
                  "type": "null"
                }
              ]
            },
            "unbonding_period": {
              "type": [
                "integer",
                "null"
              ],
              "format": "uint64",
              "minimum": 0.0
            }
          }
        }
      }
    },
    {
      "type": "object",
      "required": [
        "single_deposit"
      ],
      "properties": {
        "single_deposit": {
          "type": "object",
          "required": [
            "combination"
          ],
          "properties": {
            "combination": {
              "type": "string"
            }
          }
        }
      }
    },
    {
      "type": "object",
      "required": [
        "deposit"
      ],
      "properties": {
        "deposit": {
          "type": "object",
          "required": [
            "combinations"
          ],
          "properties": {
            "combinations": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    {
      "type": "object",
      "required": [
        "gift"
      ],
      "properties": {
        "gift": {
          "type": "object",
          "required": [
            "combinations",
            "recipient"
          ],
          "properties": {
            "combinations": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "recipient": {
              "$ref": "#/definitions/HumanAddr"
            }
          }
        }
      }
    },
    {
      "type": "object",
      "required": [
        "sponsor"
      ],
      "properties": {
        "sponsor": {
          "type": "object",
          "properties": {
            "award": {
              "type": [
                "boolean",
                "null"
              ]
            }
          }
        }
      }
    },
    {
      "type": "object",
      "required": [
        "withdraw"
      ],
      "properties": {
        "withdraw": {
          "type": "object",
          "properties": {
            "instant": {
              "type": [
                "boolean",
                "null"
              ]
            }
          }
        }
      }
    },
    {
      "type": "object",
      "required": [
        "claim"
      ],
      "properties": {
        "claim": {
          "type": "object",
          "properties": {
            "amount": {
              "anyOf": [
                {
                  "$ref": "#/definitions/Uint128"
                },
                {
                  "type": "null"
                }
              ]
            }
          }
        }
      }
    },
    {
      "type": "object",
      "required": [
        "execute_lottery"
      ],
      "properties": {
        "execute_lottery": {
          "type": "object"
        }
      }
    },
    {
      "description": "(internal) Called internally by ExecuteLottery",
      "type": "object",
      "required": [
        "__handle_prize"
      ],
      "properties": {
        "__handle_prize": {
          "type": "object"
        }
      }
    },
    {
      "type": "object",
      "required": [
        "execute_epoch_ops"
      ],
      "properties": {
        "execute_epoch_ops": {
          "type": "object"
        }
      }
    }
  ],
  "definitions": {
    "Decimal256": {
      "description": "A fixed-point decimal value with 18 fractional digits, i.e. Decimal256(1_000_000_000_000_000_000) == 1.0 The greatest possible value that can be represented is 115792089237316195423570985008687907853269984665640564039457.584007913129639935 (which is (2^128 - 1) / 10^18)",
      "type": "string"
    },
    "HumanAddr": {
      "type": "string"
    },
    "Uint128": {
      "type": "string"
    }
  }
}
